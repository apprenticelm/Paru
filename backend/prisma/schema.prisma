// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  FAILED
  SUCCESS
}

model User {
  id                Int                 @id @default(autoincrement())
  salutation        String?
  title             String?
  firstName         String
  lastName          String
  username          String              @default("")
  password          String
  email             String
  speciality        String?
  phoneNumber       String?             @default("")
  interests         String?
  role              String?             @default("user")
  key               String?
  department        String              @default("")
  practicingNumber  String              @default("")
  deleted           Boolean             @default(false)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  EventCreation     Event[]
  EventRegistration EventRegistration[]
}

model Event {
  id                      Int                 @id @default(autoincrement())
  title                   String
  modules                 String
  scheduleStart           DateTime
  scheduleEnd             DateTime
  location                String
  instructor              String
  speaker                 String
  capacity                Int
  price                   Int
  registrationStart       DateTime
  registrationEnd         DateTime
  deleted                 Boolean             @default(false)
  user                    User                @relation(fields: [userId], references: [id])
  userId                  Int
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  EventCreationAdditional EventAdditional?
  EventRegistration       EventRegistration[]
}

model EventAdditional {
  id                Int      @id @default(autoincrement())
  details           String?
  learn             String?
  requirements      String?
  advantages        String?
  documentUrl       String?
  ImageUrl          String?
  deleted           Boolean  @default(false)
  event             Event    @relation(fields: [eventId], references: [id])
  eventId           Int      @unique
  MaterialDocuments File[]   @relation(name: "EventAdditional_MaterialDocuments")
  MaterialImages    File[]   @relation(name: "EventAdditional_MaterialImages")
  MaterialVideos    File[]   @relation(name: "EventAdditional_MaterialVideos")
  MaterialLinks     String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model EventRegistration {
  id              Int      @id @default(autoincrement())
  registrationFor String
  fullName        String
  email           String
  documentUrl     String   @default("")
  event           Event    @relation(fields: [eventId], references: [id])
  eventId         Int
  user            User?    @relation(fields: [userId], references: [id])
  userId          Int?
  deleted         Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model HomeImages {
  id               Int      @id @default(autoincrement())
  fieldName        String
  originalFilename String
  path             String
  headers          Json
  size             Int
  name             String
  type             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model File {
  id                 Int              @id @default(autoincrement())
  fieldName          String
  originalFilename   String
  path               String
  headers            Json
  size               Int
  name               String
  type               String
  MaterialDocuments  EventAdditional? @relation(fields: [materialDocumentId], references: [id], name: "EventAdditional_MaterialDocuments")
  materialDocumentId Int?
  MaterialImages     EventAdditional? @relation(fields: [materialImageId], references: [id], name: "EventAdditional_MaterialImages")
  materialImageId    Int?
  MaterialVideos     EventAdditional? @relation(fields: [materialVideoId], references: [id], name: "EventAdditional_MaterialVideos")
  materialVideoId    Int?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}
